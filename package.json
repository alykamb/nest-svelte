{
    "name": "nest-svelte",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "front:build": "NODE_ENV=production rollup -c",
        "front:dev": "NODE_ENV=development rollup -c -w",
        "front:start": "NODE_ENV=development sirv client/public",
        "front:validate": "NODE_ENV=development svelte-check",
        "back:prebuild": "NODE_ENV=production rimraf dist",
        "back:build": "NODE_ENV=production nest build",
        "back:format": "NODE_ENV=production prettier --write \"server/**/*.ts\" \"libs/**/*.ts\"",
        "back:start": "NODE_ENV=development nest start",
        "back:start:dev": "NODE_ENV=development nest start --watch",
        "back:start:debug": "NODE_ENV=development nest start --debug --watch",
        "back:start:prod": "NODE_ENV=production node dist/main",
        "back:lint": "eslint \"{src,server,libs,test}/**/*.ts\" --fix",
        "back:test": "NODE_ENV=testing jest",
        "back:test:watch": "NODE_ENV=testing jest --watch",
        "back:test:cov": "NODE_ENV=testing jest --coverage",
        "back:test:debug": "NODE_ENV=testing node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "back:test:e2e": "NODE_ENV=testing jest --config ./server/test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/common": "^7.0.0",
        "@nestjs/core": "^7.0.0",
        "@nestjs/platform-express": "^7.0.0",
        "@nestjs/platform-fastify": "^7.4.2",
        "fastify": "^3.2.1",
        "node-sass": "^4.14.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rollup-plugin-copy": "^3.3.0",
        "rxjs": "^6.5.4",
        "sirv-cli": "^1.0.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^7.0.0",
        "@nestjs/schematics": "^7.0.0",
        "@nestjs/testing": "^7.0.0",
        "@rollup/plugin-commonjs": "^14.0.0",
        "@rollup/plugin-node-resolve": "^8.0.0",
        "@rollup/plugin-typescript": "^4.0.0",
        "@tsconfig/svelte": "^1.0.0",
        "@types/express": "^4.17.3",
        "@types/jest": "25.2.3",
        "@types/node": "^13.9.1",
        "@types/supertest": "^2.0.8",
        "@typescript-eslint/eslint-plugin": "^3.9.1",
        "@typescript-eslint/parser": "^3.9.1",
        "babel-eslint": "^10.1.0",
        "eslint": "^7.7.0",
        "eslint-config-airbnb-typescript": "^9.0.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-react": "^7.20.6",
        "eslint-plugin-sort-class-members": "^1.8.0",
        "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
        "eslint-plugin-svelte3": "^2.7.3",
        "jest": "26.0.1",
        "prettier": "^2.0.5",
        "prettier-plugin-svelte": "^1.1.0",
        "rollup": "^2.3.4",
        "rollup-plugin-hot": "^0.1.0",
        "rollup-plugin-livereload": "^1.0.0",
        "rollup-plugin-scss": "^2.6.0",
        "rollup-plugin-svelte": "^5.0.3",
        "rollup-plugin-svelte-hot": "^0.10.0",
        "rollup-plugin-terser": "^6.0.0",
        "supertest": "^4.0.2",
        "svelte": "^3.0.0",
        "svelte-check": "^1.0.0",
        "svelte-preprocess": "^4.0.0",
        "ts-jest": "26.1.0",
        "ts-loader": "^6.2.1",
        "ts-node": "^8.6.2",
        "tsconfig-paths": "^3.9.0",
        "tslib": "^2.0.0",
        "typescript": "^3.9.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/apps/"
        ]
    }
}
