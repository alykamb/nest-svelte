{
    "collection": "@nestjs/schematics",
    "sourceRoot": "server/src",
    "monorepo": true,
    "root": "server",
    "compilerOptions": {
        "webpack": true,
        "tsConfigPath": "server/tsconfig.json"
    },
    "projects": {
        "server": {
            "type": "application",
